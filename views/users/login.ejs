<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <h3 class="col-8 offset-2">Login for apnaGhar</h3>
        <div class="col-8 offset-2">
            <form action="/user/login" method="post" class="needs-validation" novalidate>

                <div>
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" name="username" placeholder="Enter username" class="form-control"
                        required>
                    <div class="valid-feedback"> looks good</div>
                    <div class="invalid-feedback">Please enter a username</div>

                </div>

                <div>
                    <label for="password" class="form-label">Password</label>
                    <input type="text" id="password" name="password" placeholder="Enter a strong password"
                        class="form-control" required>
                    <div class="valid-feedback"> looks good</div>
                    <div class="invalid-feedback">Please enter a strong password</div>

                </div>
                <button class="btn btn-success mt-2">Login</button>

            </form>

        </div>
    </div>